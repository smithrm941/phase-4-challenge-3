<!DOCTYPE html>
<html>
<head>
  <title>Vinyl : <%= user.name %></title>
  <%- include ./partials/scripts %>

</head>
<body>
  <%- include ./partials/navbar %>

  <h1><%= user.name %></h1>
  <h1><%= user.email %></h1>
  <h1><%= user.join_date.toDateString().substring(0, 15) %></h1>

  <h2>Reviews</h2>
  <% reviews.forEach(function(review) { %>
    <h1><%= review.title %></h1>
    <h1><%= review.review_date.toDateString().substring(0, 15) %></h1>
    <h1><%= review.content %></h1>
    <% if (loggedInUser[0].id === review.author_id) { %>
      <button class="fa fa-trash"></button>
    <% } %>
  <% }) %>

  <!-- TODO: implement album reviews -->

</body>
</html>
